<T3DataStructure>
	<sheets>
		<!--
			################################
			  SHEET General Settings
			################################
		-->
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:catalog/Resources/Private/Language/locallang_be.xlf:flexforms_tab.settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<!-- View -->

					<!-- Category -->
					<settings.categories>
						<TCEforms>
							<label>LLL:EXT:catalog/Resources/Private/Language/locallang_be.xlf:flexforms_general.product</label>
							<config>
								<type>select</type>
								<foreign_table>tx_catalog_domain_model_product</foreign_table>
								<foreign_table_where>AND (tx_catalog_domain_model_product.sys_language_uid = 0 OR tx_catalog_domain_model_product.l10n_parent = 0) ORDER BY tx_catalog_domain_model_product.name</foreign_table_where>
								<size>1</size>
								<minitems>0</minitems>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.categories>    

				</el>
			</ROOT>
		</sDEF>

	</sheets>
</T3DataStructure>